  <script>
    // ðŸ•’ Date de rÃ©vÃ©lation
    const revealDate = new Date("2025-10-10T17:30:00");

    function updateCountdown() {
      const now = new Date();
      const diff = revealDate - now;

      if (diff <= 0) {
        // Quand le compte Ã  rebours est terminÃ©, redirige vers la rÃ©vÃ©lation
        window.location.href = "revelation.html";
        return;
      }

      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);

      const str =
        (days > 0 ? days + "j " : "") +
        String(hours).padStart(2, '0') + ":" +
        String(minutes).padStart(2, '0') + ":" +
        String(seconds).padStart(2, '0');

      document.getElementById("countdown").textContent = str;
      setTimeout(updateCountdown, 1000);
    }

    updateCountdown();
  </script>
